<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AddGasto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/dark_green" />

        <EditText
            android:id="@+id/editData"
            style="@style/Edit_Text_Add"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="200dp"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="5dp"
            android:hint="00 / 00 / 0000"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@id/my_toolbar"
            app:layout_constraintStart_toStartOf="@id/my_toolbar"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar" />

        <EditText
            android:id="@+id/editValor"
            style="@style/Edit_Text_Add"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="5dp"
            android:hint="Valor R$"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@id/my_toolbar"
            app:layout_constraintStart_toStartOf="@id/my_toolbar"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddGasto"
            style="@style/Button"
            android:layout_marginTop="20dp"
            android:text="Adicionar Gasto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editValor" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddFoto"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:text="Adicionar comprovante"
            app:layout_constraintEnd_toEndOf="@+id/btnAddGasto"
            app:layout_constraintStart_toStartOf="@+id/btnAddGasto"
            app:layout_constraintTop_toBottomOf="@id/btnAddGasto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
