<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_height="match_parent"
    app:layout_width="match_parent"
    app:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res/android"
    tools:ignore="NamespaceTypo"
    app:importantForAccessibility="no">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:id="@+id/main"
        app:layout_width="match_parent"
        app:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            app:id="@+id/my_toolbar"
            app:layout_width="match_parent"
            app:layout_height="wrap_content"
            app:background="@drawable/background"
            tools:ignore="MissingConstraints"
            app2:titleTextColor="@color/dark_green"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toTopOf="parent"/>

        <TextView
            app:id="@+id/txtTelaAdd"
            app:layout_width="wrap_content"
            app:layout_height="wrap_content"
            app:text="Cadastrar Gasto"
            app:textSize="30sp"
            app:textStyle="bold"
            app:textColor="@color/dark_green"
            app:layout_marginTop="15dp"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/my_toolbar"/>

        <!-- Coluna 1: Categoria -->
        <LinearLayout
            app:id="@+id/coluna1"
            app:layout_width="180dp"
            app:layout_height="85dp"
            app:layout_marginStart="20dp"
            app:layout_marginTop="20dp"
            app:orientation="vertical"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/txtTelaAdd">

            <TextView
                app:id="@+id/txtCategoria"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginStart="5dp"
                app:text="Categoria"
                app:textColor="@color/dark_green"
                app:textSize="15sp"
                app:textStyle="bold" />

            <Spinner
                app:id="@+id/spinnerCategoria"
                style="@style/Edit_Text_Add"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:entries="@array/categorias_array"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@id/txtCategoria"
                app2:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <!-- Coluna 2: Forma de pagamento-->
        <LinearLayout
            app:id="@+id/coluna2"
            app:layout_width="180dp"
            app:layout_height="85dp"
            app:layout_marginTop="20dp"
            app:layout_marginEnd="20dp"
            app:orientation="vertical"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/txtTelaAdd">

            <TextView
                app:id="@+id/txtFmPagamento"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginStart="5dp"
                app:text="Forma de pagamento"
                app:textColor="@color/dark_green"
                app:textSize="15sp"
                app:textStyle="bold" />

            <Spinner
                app:id="@+id/spinnerFmPagamento"
                style="@style/Edit_Text_Add"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:entries="@array/pagamento_array"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@id/txtCategoria"
                app2:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <!-- Coluna 3: data -->
        <LinearLayout
            app:id="@+id/coluna3"
            app:layout_width="180dp"
            app:layout_height="85dp"
            app:layout_marginStart="20dp"
            app:layout_marginTop="5dp"
            app:orientation="vertical"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/coluna1">

            <TextView
                app:id="@+id/txtData"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginStart="5dp"
                app:text="Data do gasto"
                app:textColor="@color/dark_green"
                app:textSize="15sp"
                app:textStyle="bold" />

            <EditText
                style="@style/Edit_Text_Add"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:drawableStart="@drawable/ic_calendar"
                app:hint="00 / 00 / 0000"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@id/spinnerCategoria"
                app2:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <!-- Coluna 4: valor -->
        <LinearLayout
            app:id="@+id/coluna4"
            app:layout_width="180dp"
            app:layout_height="85dp"
            app:layout_marginEnd="20dp"
            app:layout_marginTop="5dp"
            app:orientation="vertical"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/coluna2">

            <TextView
                app:id="@+id/txtValor"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginStart="5dp"
                app:text="Valor R$"
                app:textColor="@color/dark_green"
                app:textSize="15sp"
                app:textStyle="bold" />

            <EditText
                style="@style/Edit_Text_Add"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:drawableStart="@drawable/ic_money"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@id/spinnerCategoria"
                app2:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <!-- Coluna 5: descricao -->
        <LinearLayout
            app:id="@+id/coluna5"
            app:layout_width="match_parent"
            app:layout_height="100dp"
            app:layout_marginStart="20dp"
            app:layout_marginEnd="20dp"
            app:layout_marginTop="5dp"
            app:orientation="vertical"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/coluna3">

            <TextView
                app:id="@+id/txtDescricao"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:layout_marginStart="5dp"
                app:layout_marginTop="5dp"
                app:text="Descrição"
                app:textColor="@color/dark_green"
                app:textSize="15sp"
                app:textStyle="bold"
                app2:layout_constraintEnd_toEndOf="parent"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@id/coluna5" />

            <EditText
                style="@style/Edit_Text_Add"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:hint="Digite aqui..."
                app:inputType="textMultiLine"
                app:gravity="top|start"
                app:lines="4"
                app:maxLines="6"
                app:maxLength="200"
                app:scrollbars="vertical"
                app:overScrollMode="always"
                app2:layout_constraintEnd_toEndOf="@id/coluna5"
                app2:layout_constraintStart_toStartOf="@id/coluna5"
                app2:layout_constraintTop_toBottomOf="@id/txtDescricao" />
        </LinearLayout>

        <!-- Coluna 6: comprovante -->
        <LinearLayout
            app:id="@+id/coluna6"
            app:layout_width="280dp"
            app:layout_height="85dp"
            app:layout_marginStart="20dp"
            app:layout_marginTop="5dp"
            app:orientation="vertical"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/coluna5">

            <TextView
                app:id="@+id/txtComprovante"
                app:layout_width="wrap_content"
                app:layout_height="wrap_content"
                app:layout_marginStart="5dp"
                app:layout_marginTop="10dp"
                app:text="Comprovante"
                app:textColor="@color/dark_green"
                app:textSize="15sp"
                app:textStyle="bold" />

            <EditText
                style="@style/Edit_Text_Add"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:hint="Tire uma foto..."
                app2:layout_constraintEnd_toEndOf="@id/coluna7"
                app2:layout_constraintStart_toStartOf="parent"
                app2:layout_constraintTop_toBottomOf="@id/txtComprovante" />
        </LinearLayout>

        <!-- Coluna 7: valor -->
        <LinearLayout
            app:id="@+id/coluna7"
            app:layout_width="80dp"
            app:layout_height="wrap_content"
            app:layout_marginTop="35dp"
            app:layout_marginEnd="10dp"
            app:orientation="vertical"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toEndOf="@id/coluna6"
            app2:layout_constraintTop_toBottomOf="@id/coluna5">

            <ImageButton
                app:id="@+id/btnEntrar"
                style="@style/Button_Camera"
                app:src="@drawable/camera"
                app:padding="8dp"
                app2:layout_constraintEnd_toEndOf="@id/coluna7"
                app2:layout_constraintStart_toStartOf="@id/coluna7"
                app2:layout_constraintTop_toBottomOf="@id/coluna5" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            app:id="@+id/btnSalvar"
            style="@style/Button_Cadastro"
            app:text="Salvar"
            app:background="@drawable/button"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/coluna7"/>

        <androidx.appcompat.widget.AppCompatButton
            app:id="@+id/btnLimpar"
            style="@style/Button_Cadastro"
            app:text="Limpar"
            app:background="@drawable/button"
            app:backgroundTint="@color/light_green"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toBottomOf="@id/btnSalvar"/>








    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>